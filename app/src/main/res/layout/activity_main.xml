<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    android:backgroundTint="@android:color/holo_blue_bright">

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/iv2"
        android:layout_marginStart="25dp"
        android:onClick="imageTapped"
        android:tag="0"
        app:srcCompat="@drawable/blue" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignBottom="@+id/iv5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104dp"
        android:onClick="imageTapped"
        android:tag="1"
        app:srcCompat="@drawable/blue" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/iv2"
        android:layout_marginEnd="33dp"
        android:onClick="imageTapped"
        android:tag="2"
        app:srcCompat="@drawable/blue" />

    <ImageView
        android:id="@+id/iv4"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignStart="@+id/iv1"
        android:layout_centerVertical="true"
        android:onClick="imageTapped"
        android:tag="3"
        app:srcCompat="@drawable/blue" />

    <ImageView
        android:id="@+id/iv5"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignStart="@+id/iv2"
        android:layout_alignTop="@+id/iv4"
        android:onClick="imageTapped"
        android:tag="4"
        app:srcCompat="@drawable/blue" />

    <ImageView
        android:id="@+id/iv6"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignStart="@+id/iv3"
        android:layout_alignTop="@+id/iv5"
        android:onClick="imageTapped"
        android:tag="5"
        app:srcCompat="@drawable/blue" />

    <ImageView
        android:id="@+id/iv7"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignStart="@+id/iv4"
        android:layout_below="@+id/iv4"
        android:layout_marginTop="20dp"
        android:onClick="imageTapped"
        android:tag="6"
        app:srcCompat="@drawable/blue" />

    <ImageView
        android:id="@+id/iv8"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignStart="@+id/iv5"
        android:layout_alignTop="@+id/iv7"
        android:onClick="imageTapped"
        android:tag="7"
        app:srcCompat="@drawable/blue" />

    <ImageView
        android:id="@+id/iv9"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_alignStart="@+id/iv6"
        android:layout_alignTop="@+id/iv8"
        android:onClick="imageTapped"
        android:tag="8"
        app:srcCompat="@drawable/blue" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:elevation="10dp"
        android:onClick="playAgain"
        android:text="@string/button"
        tools:text="@string/button" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/iv1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/player1"
        tools:text="@string/player1" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radioButton3"
        android:layout_alignBottom="@+id/radioButton3"
        android:layout_alignEnd="@+id/iv3"
        android:layout_marginEnd="19dp"
        android:text="@string/player2"
        tools:text="@string/player2" />
</RelativeLayout>